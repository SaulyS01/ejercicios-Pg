import java.util.Scanner;

public class ejemplos_pg {
    public static void main(String[] args) {

        //Dada las horas trabajadas de una persona y el
        //valor por hora. Calcular su salario e imprimirlo:

        Scanner input = new Scanner(System.in);
        int total = 0, horas, valor;
        System.out.println("Ingresa la cantidad de horas trabajadas: ");
        horas = input.nextInt();
        System.out.println("Ingresa el valor por hora: ");
        valor = input.nextInt();
        total = horas * valor;
        System.out.println("El salario es de: "+ total);

        //Guillermo tiene N dólares.
        //Luis tiene la mitad de lo que posee Guillermo.
        //Juan tiene la mitad de lo que poseen Luis y Guillermo juntos.
        //Hacer un programa que calcule e imprima la cantidad de dinero que tienen entre los tres.

        int guillermo, luis, lucas, total = 0;
        System.out.println("Ingrese el valor de Guillermo: ");
        guillermo = input.nextInt();
        luis = guillermo/2;
        lucas = (guillermo+luis)/2;
        total = guillermo+lucas+luis;
        System.out.println("La cantidad entre los 3 es de: "+ total);
        
        //Tarea:
        //Hacer una aplicación que halle el área de un circulo.
    }
}
